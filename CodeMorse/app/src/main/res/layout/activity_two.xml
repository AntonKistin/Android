<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.codemorse.ActivityTwo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/backgroundColorLL">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtVHeadText"
            android:textColor="@color/txtVHeadColor"
            android:id="@+id/txtVHead"
            android:textStyle="italic"
            android:layout_marginLeft="15px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtVActTwo"
            android:textColor="@color/txtVActTwoColor"
            android:layout_marginLeft="15px"
            android:layout_below="@+id/txtVHead"
            android:layout_centerHorizontal="true" />
    </LinearLayout>
</LinearLayout>
